                              <!-- language section -->
                                <div class="form-element">
                                  <label class="w3-text-teal" style="margin-right: 3px;"><b>Hebrew</br></label>
                                  <input class="slider" id="hebrew-edit" type="range" min="0" max="100" step="10" value="0" >
