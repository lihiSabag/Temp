    <script>
      //attrs temp
      var businassName=document.getElementById('businassName-Input').value="Bar Fitness";
      var fullName=document.getElementById('fullName-Input').value="Bar Sela";
      var specialty=document.getElementById('specialty-Input').value="athletic";
      var city=document.getElementById('city-Input').value="Rehovot";
      var phone=document.getElementById('phone-Input').value="052-6761996";
      var email=document.getElementById('email-Input').value="Barsela03@gmail.com";

      //languges
      var hebrewEdit=document.getElementById('hebrew-edit');
      var englishEdit=document.getElementById('english-edit');
      var spanishEdit=document.getElementById('spanish-edit');
      var russianEdit=document.getElementById('russian-edit');
      var arabicEdit=document.getElementById('arabic-edit');

      //show % according to what is selected in the range input
      hebrewEdit.addEventListener("click", function() {
        document.getElementById('hebp').innerHTML=hebrewEdit.value; });

      englishEdit.addEventListener("click", function() {
        document.getElementById('enbp').innerHTML=englishEdit.value; });

      russianEdit.addEventListener("click", function() {
        document.getElementById('rubp').innerHTML=russianEdit.value; });

      spanishEdit.addEventListener("click", function() {
        document.getElementById('spbp').innerHTML=spanishEdit.value; });

      arabicEdit.addEventListener("click", function() {
        document.getElementById('arbp').innerHTML=arabicEdit.value; });

      function ValidateEmail(email) {
        return /^\w+([\.-]?\w+)*@\w+([\.-]?\w+)*(\.\w{2,3})+$/.test(email);
      }
      function onlyLetters(str) {
        return /^[a-zA-Z]+$/.test(str);
      }
      function validPhone(phone){
        if(phone.charAt(0)==0 & phone.charAt(5)==0 && phone.length==10)
        {
          return true;
        }
        return false;
      }

      function validateEditProfileBusiness()
      {
        var fullName=document.getElementById("fullName-Input").value;
        var city=document.getElementById("city-Input").value;
        var phone=document.getElementById("phone-Input").value;
        var email=document.getElementById("email-Input").value;
        

        var hebrew=document.getElementById('hebrew-edit').value;
        var english=document.getElementById('english-edit').value;
        var spanish=document.getElementById('spanish-edit').value;
        var russian=document.getElementById('russian-edit').value;
        var arabic=document.getElementById('arabic-edit').value;

        var schoolName=document.getElementById("schoolName-Input").value;
        
        if(!onlyLetters(fullName))
        {
          document.getElementById("errorMsg-fn").style.display="block";
          return false;
        }
        if(!onlyLetters(city))
        {
          document.getElementById("errorMsg-ci").style.display="block";
          return false;
        }
        if(!validPhone(phone))
        {
          document.getElementById("errorMsg-ph").style.display="block";
          return false;
        }
        if(hebrew==0 && english==0 && russian==0 && spanish==0 && arabic==0)
        {
          document.getElementById("errorMsg-l").style.display="block";
          return false;
        }
        if(!onlyLetters(schoolName))
        {
          document.getElementById("errorMsg-sn").style.display="block";
          return false;
        }
        if(!ValidateEmail(email))
        {
          document.getElementById("errorMsg-e").style.display="block";
          return false;
        }
        
        return true;
      
      }
    </script>
