                      <label id="errorMsg-ci" style="font-size: 14px; color: red" ><b>city must contain only letters </br></label> 
                      <label class="w3-text-teal"><b>Phone</br></label>
                      <input class="w3-input w3-border w3-light-grey w3-round-xlarge" id="phone-Input" name="Phone" type="text" required>                        
                      <label id="errorMsg-fh" style="font-size: 14px; color: red" ><b>phone number nust 10 digits, With a legal Israeli prefix </br></label>      
                      <label class="w3-text-teal"><b>Email</br></label>
                      <input class="w3-input w3-border w3-light-grey w3-round-xlarge" id="email-Input" name="Email" type="text" required >      
                      <label id="errorMsg-e" style="font-size: 14px; color: red" ><b>Invalid email </br></label>
                      <label class="w3-text-teal"><b>About Section (Description)</br></label>
                      <span class="w3-input w3-border w3-light-grey w3-round-xlarge" role="textbox"  id="about-Input" name="Description" type="text" required contenteditable></p>

                      <hr />
                      <label class="w3-text-grey" id="languages"><b>Languages</b></label>
                      <label class="w3-text-grey"><br>Select the level of language proficiency</br></label>
                      <!-- language section -->
